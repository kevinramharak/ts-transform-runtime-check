{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs", 
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable"
    ],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "plugins": [
      { "transform": "ts-transform-runtime-check/lib/transformer" }
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib/**/*"
  ]
}